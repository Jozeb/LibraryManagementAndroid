<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    >

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#f0f0f0"
        tools:context="com.example.jazibhassan.thelibrary.ProfileActivity">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            >
            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:text="Profile Photo"
                android:textSize="@dimen/textsize1"
                android:textColor="@color/colorPrimaryDark"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorSecondaryText"
                android:layout_marginBottom="5dp"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/prof_pic"
                    />
            </LinearLayout>


</android.support.v7.widget.CardView>
        <!-- Name -->

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="Basic"
                    android:textSize="@dimen/textsize1"
                    android:textColor="@color/colorPrimaryDark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSecondaryText"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stext1"
                        android:layout_width="@dimen/signup_t"
                        android:layout_height="wrap_content"
                        android:text="User ID"
                        android:textColor="@color/text1"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/sedit1"
                        android:layout_width="@dimen/signup_e"
                        android:layout_height="wrap_content"
                        android:hint="Kxx-xxxx"

                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stext4"
                        android:layout_width="@dimen/signup_t"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/text1"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/sedit4"
                        android:layout_width="@dimen/signup_e"
                        android:layout_height="wrap_content"
                        android:hint="Kxxxxxx@nu.edu.pk"

                        android:textColor="@color/colorPrimaryText"
                        android:textSize="18dp" />

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:paddingTop="2dp"
        android:text="Details"
        android:textSize="@dimen/textsize1"
        android:textColor="@color/colorPrimaryDark"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSecondaryText"
        android:layout_marginBottom="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/stext5"
                android:layout_width="@dimen/signup_t"
                android:layout_height="50dp"
                android:text="Name"
                android:textColor="@color/text1"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/sedit5"
                android:layout_width="@dimen/signup_e"
                android:layout_height="wrap_content"

                android:textColor="@color/colorPrimaryText"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stext6"
                android:layout_width="@dimen/signup_t"
                android:layout_height="50dp"
                android:text="Address"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/sedit6"
                android:layout_width="@dimen/signup_e"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stext7"
                android:layout_width="@dimen/signup_t"
                android:layout_height="50dp"
                android:text="Contact"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/sedit7"
                android:layout_width="@dimen/signup_e"
                android:layout_height="wrap_content"
                android:hint="xxxx-xxxxxxx"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stext8"
                android:layout_width="@dimen/signup_t"
                android:layout_height="50dp"
                android:text="Tel No"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/sedit8"
                android:layout_width="@dimen/signup_e"
                android:layout_height="wrap_content"
                android:hint="0213-xxxxxxx"
                android:textColor="@color/colorPrimaryText"
                android:textSize="18dp"

                />

        </LinearLayout>

</LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="Notification"
                    android:textSize="@dimen/textsize1"
                    android:textColor="@color/colorPrimaryDark"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorSecondaryText"
                    android:layout_marginBottom="5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="@dimen/signup_t"
                        android:layout_height="wrap_content"
                        android:text="Mute"
                        android:textSize="18dp"
                        android:layout_weight="1"/>

                    <android.support.v7.widget.SwitchCompat

                        android:id="@+id/mute"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>




            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>


</ScrollView>