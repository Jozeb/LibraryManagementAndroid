<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="com.example.jazibhassan.thelibrary.SignUpActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign-up"
            android:gravity="center"
            android:textSize="45sp"

            android:textStyle="bold"
            android:textColor="@color/colorText"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            />
        <!-- Name -->


        <EditText

            android:id="@+id/sedit1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/editbox1"
            android:hint="Kxx-xxxx"
            android:padding="5dp"
            android:textSize="20sp" />


        <!-- Password -->


        <EditText
            android:id="@+id/sedit2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/editbox1"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="20sp" />


        <!-- Confirm Password -->


        <EditText
            android:id="@+id/sedit3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/editbox1"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/sedit4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/editbox1"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:hint="Email"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/sedit5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:inputType="textCapWords"
            android:background="@drawable/editbox1"
            android:hint="Name"
            android:padding="5dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/sedit9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/editbox1"
            android:hint="Father Name"
            android:inputType="textCapWords"
            android:padding="5dp"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/sedit6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/editbox1"
            android:hint="Address"
            android:inputType="textPostalAddress"
            android:padding="5dp"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/sedit7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/editbox1"
            android:hint="Contact no"
            android:padding="5dp"
            android:inputType="phone"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/sedit8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/editbox1"
            android:hint="Telephone No"
            android:padding="5dp"
            android:inputType="phone"
            android:textSize="20sp" />




        <Button
            android:id="@+id/signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button1_selector"
            android:text="Confirm"

            android:textColor="@color/colorText" />

    </LinearLayout>

</ScrollView>